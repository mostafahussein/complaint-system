<div class="left-sidebar">
  	<div class="row-fluid">
     <div class="span12">
      <div class="widget">
        <div class="widget-header">
          <div class="title">
            Canned Responses
          </div>
        </div>
        <div class="widget-body">
          <table id="response" class="table table-condensed table-striped table-hover table-bordered">
            <thead>
              <tr style="font-weight: bold;">  
                <td style='text-align:center;'>Canned Responses</td>
                <td style='text-align:center;'>Actions</td>
              </tr>
            </thead>
            <tbody>
              <% @responses.each do |response| %>
              <tr id="<%= response.id %>">  
                <td style='text-align:center;'><%= response.canned_response %></td>
                <td style='text-align:center;'><a href="<%= edit_response_path(response) %>" data-remote="true" rel="tooltip" title="Update">update</a> | <%= link_to "delete", response, method: :delete, remote: true, data: { confirm: "#{response.canned_response} will be deleted, proceed?" } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
$('#response').dataTable({
  "sPaginationType": "full_numbers"
});
</script>