<div class="widget-body">
  <%= simple_form_for(@faq, :html => {:class => 'form-horizontal' }) do |f| %>
    <%= f.input :faq_question, as: :text,label: 'Question:', placeholder: 'Type a question', input_html: {class: 'input-xlarge', rows:'3'} %>
    <%= f.input :faq_answer, as: :text, label: "Answer:", placeholder: 'Answer goes here', input_html: {class: 'input-xlarge', rows:'6'} %>
    <%= f.association :subject , include_blank: false, label_method: :to_label, prompt: 'Select A Subject', label: "Question's Category:",  input_html: {class: 'input-xlarge'} %>
    <div class="form-actions no-margin">
      <button type="submit" class="btn btn-info pull-right">Add FAQ</button>
      <div class="clearfix"></div>
    </div>
 <% end %>
</div>