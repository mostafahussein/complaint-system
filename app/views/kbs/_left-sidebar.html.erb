<% if params[:tab] == 'categories' %>
  <div class="left-sidebar">
    	<div class="row-fluid">
       <div class="span12">
        <div class="widget">
          <div class="widget-header">
            <div class="title">
              Knowledge Base Categories
            </div>
          </div>
          <div class="widget-body">
            <table id='categroy' class="table table-condensed table-striped table-hover table-bordered">
              <thead>
                <tr style="font-weight: bold;">  
                  <td style='text-align:center;'>Total of Questions</td>
                  <td style='text-align:center;'>Category</td>
                </tr>
              </thead>
              <tbody>
                <% @subjects.each do |subject| %>
                <tr>  
                  <td style='text-align:center;'><%= pluralize(subject.kbs.size, "Question") %></td>
                  <td style='text-align:center;'><%= link_to subject.subject_title, subject_kbs_path(subject, tab: 'questions') %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
  $('#categroy').dataTable({
    "sPaginationType": "full_numbers"
  });
  </script>
<% elsif params[:tab] == 'questions' %>
<% end%>