<div class="row-fluid">
				<div class="span12">
					<div class="widget">
						<div class="widget-body">
							<div class="span3">&nbsp;</div>
							<div class="span6">
								<div class="sign-in-container">
									<form action="/users/sign_in" class="login-wrapper" method="post">
										<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
										<div class="header">
											<div class="row-fluid">
												<div class="span12">
													<h3>Login</h3>
													<p>Fill out the form below to login.</p>
												</div>
											</div>

										</div>
										<div class="content">
											<div class="row-fluid">
												<div class="span12">
													<input class="input span12 email" id="user_email" name="user[email]" placeholder="Email" required="required" type="email" value="">
												</div>
											</div>
											<div class="row-fluid">
												<div class="span12">
													<input class="input span12 password" id="user_password" name="user[password]" placeholder="Password" required="required" type="password">
												</div>
											</div>
										</div>

										<div class="actions">
											<input class="btn btn-primary" name="Login" type="submit" value="Login" >
											<div class="clearfix"></div>
										</div>
									</form>
								</div>
							</div>
							<% end %>
							<div class="span3">&nbsp;</div>
							<div class="clearfix"></div>
						</div>
					</div>
				</div>

			</div>



