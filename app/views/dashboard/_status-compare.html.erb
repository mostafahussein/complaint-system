<div class="row-fluid">
	<div class="span11">
		<div class="widget">
			<div class="widget-header">
				<div class="title" id="complaints_by_status">
					Complaints by Status
					<span class="mini-title">
						Complaint Statistics 
					</span>
				</div>
			</div>
			<div class="widget-body">
				<div id="line-compare-1" style="height: 500px; min-width: 500px"></div>
				<script>
				$(function() {
					var seriesOptions = [],
					yAxisOptions = [],
					seriesCounter = 0,
					names = ['Open_Status', 'In_Progress_Status', 'Pending_Status', 'Solved_Status', 'Closed_Status'],
					colors = Highcharts.getOptions().colors;

					$.each(names, function(i, name) {

						$.getJSON('/tickets/' + name.toLowerCase(),	function(data) {

							seriesOptions[i] = {
								name: name.replace(/_Status$/, ''),
								data: data
							};

							// As we're loading the data asynchronously, we don't know what order it will arrive. So
							// we keep a counter and create the chart when all the data is loaded.
							seriesCounter++;

							if (seriesCounter == names.length) {
								createChart();
							}
						});
					});



					// create the chart when all data is loaded
					function createChart() {

						$('#line-compare-1').highcharts('StockChart', {
							xAxis: {
							                min: <%= @min %>,
							                max: <%= @max %>
							            },
							chart: {
									backgroundColor: null
							},

							rangeSelector: {
								selected: 0
							},

							yAxis: {
								labels: {
									formatter: function() {
										return (this.value > 0 ? '+' : '') + this.value;
									}
								},
								plotLines: [{
									value: 0,
									width: 2,
									color: 'silver'
									}]
								},
								tooltip: {
									pointFormat: '<span style="color:{series.color}">{series.name}</span>: <b>{point.y}</b> Complaint(s)<br/>',
									valueDecimals: 0
								},

								series: seriesOptions
							},			function(chart){

								// apply the date pickers
								setTimeout(function () {
									$('input.highcharts-range-selector', $(chart.container).parent())
									.datepicker();
									}, 0);
								});
							};

							// Set the datepicker's date format
							$.datepicker.setDefaults({
								dateFormat: 'yy-mm-dd',
								onSelect: function(dateText) {
									this.onchange();
									this.onblur();
								}
							});

						});
						</script>
					</div>
				</div>
			</div>
		</div>