<fieldset>
  <%= f.input :content, label: "Question:", placeholder: 'Type a question', input_html: {class: 'input-xxlarge'} %>
  <%= f.input :help_text , label: 'Help Text', input_html: {class: 'input-xxlarge'} %>
  <%= f.input :_destroy, as: :boolean, label: 'Remove Question', boolean_style: :inline %>
  <%= f.input :question_type, collection: Question::QUEST_TYPE.map{|type| type.titleize} , prompt: 'Select Type',label: 'Question Type:' %>
  <%= f.input :required_question, as: :boolean, label: 'Required Question:',boolean_style: :inline %>
  <%= f.simple_fields_for :answers do |builder| %>
    <%= render 'answer_fields', f: builder %>
  <% end %>
  
  <%= link_to_add_fields "Add Answer", f, :answers %>
 
</fieldset>
<hr style="border-top: 1px solid #000000;">
