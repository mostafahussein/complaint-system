<div>
<div class="row-fluid">
	<div class="span12">
		<div class="widget">
			<div class="widget-header">
				<div class="title" id="surveys_directory">
					All Surveys
					<span class="mini-title"> 
					</span>
				</div>
			</div>

			<div class="widget-body">
				<div id="dt_example" class="example_alt_pagination">
					<table class="table table-condensed table-striped table-hover table-bordered pull-left" id="surveys" style="width: 100%;">

						<thead>
							<tr>
								<th>Survey Name</th>
								<th>Total Questions</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							<% @surveys.each do |survey| %>
							<tr id="<%= survey.id %>">
								<td><%= link_to survey.survey_name, survey %></td>
								<td><%= pluralize(survey.questions.size, "Question") %></td>
								<td><a href="<%= edit_survey_path(survey) %>" rel="tooltip" title="Update Survey">update</a> | <%= link_to "delete", survey, method: :delete, data: { confirm: "#{survey.survey_name} will be deleted, proceed?" }, remote: true %> | <%= link_to 'Set Subjects', survey, remote: true %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
					<div class="clearfix">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
<script>
$('#surveys').dataTable({
	"sPaginationType": "full_numbers"
});
</script>