<div class="left-sidebar">
	<div class="row-fluid">
		<div class="span12">
			<div class="widget no-margin">
				<div class="widget-header">
					<div class="title">
						<%= @user.email %> Profile
					</div>
				</div>
				<div class="widget-body">
					<div class="container-fluid">
						<div class="row-fluid">
							<div class="span3">
								<div class="thumbnail">
									<img alt="300x200" src="/assets/img/profile.png">
								</div>
							</div>
							<div class="span9">
								<h5>
									Personal Information
								</h5>
								<hr>
								Full Name: <%= @user.employee.full_name %>
								<hr>
								Gender: <%= @user.employee.gender.capitalize %>
								<hr>
								Department: <%= @user.employee.employee_department.department_name %>
								<hr>
								Position: <%= @user.employee.employee_position.position_title %>
							</h6>
							<% if @user.student %>
							<%= render 'users/student_info'%>

							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>