<div class="row-fluid">
	<div class="span12">
		<div class="widget">
			<div class="widget-header">
				<div class="title" id="users_directory">
					Users Directory
					<span class="mini-title"> 
					</span>
				</div>
			</div>

			<div class="widget-body">
				<div id="dt_example" class="example_alt_pagination">
					<table class="table table-condensed table-striped table-hover table-bordered pull-left" id="users" style="width: 100%;">

						<thead>
							<tr>
								<th>ID</th>
								<th>Full Name</th>
								<th>E-Mail</th>
								<th>User Type</th>
								<th>User Role</th>
								<th>User Status</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |user| %>
							<tr>
								<td><%= user.id %></td>
								<% if user.student %>
								<td><%= user.student.full_name %></td>
								<% elsif user.employee %>
								<td><%= user.employee.full_name%></td>
								<% else %>
								<td></td>
								<% end %>
								<td><%= user.email %></td>
								<td><%= user.user_type %></td>
								<td><%= user.role%></td>
								<td><%= "active" if user.active? %><%= "inactive" if !user.active? %></td>
								<td><a href="<%= user_path(user) %>" rel="tooltip" title="View Profile">view</a>
									 | <a href="<%= edit_user_path(user) %>" rel="tooltip" title="Update User Details">update</a> | <%= link_to "delete", user, method: :delete, data: { confirm: "#{user.email} will be deleted, proceed?" } %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
					<div class="clearfix">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
$('#users').dataTable({
	"sPaginationType": "full_numbers"
});
</script>