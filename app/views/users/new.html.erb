  <div class="left-sidebar">    
        <div class="row-fluid">
          <div class="span12">
            <div class="widget">
              <div class="widget-header">
                <div class="title">
                  New Account 
                  <span class="mini-title">
                   Add new user
                  </span>
                </div>
             </div>
              <div class="widget-body">
	
				<%= simple_form_for(@user, :html => {:class => 'form-horizontal' }) do |f| %>
				             
				              <%= f.input :email, placeholder: 'Enter Email Address' %>

				              <%= f.input :password, placeholder: '8 characters or more' %>
				              <%= f.input :password_confirmation, placeholder: 'Retype password' %>
				              <%= f.input :user_type, collection: ['Admin'], include_blank: false %>
	
                 <div class="form-actions no-margin">
                    <button type="submit" class="btn btn-info pull-right">
                      Create Account
                    </button>
                    <div class="clearfix">
                    </div>
                  </div>
                  
                </form>
                
              </div>
<% end %>
            </div>
          </div>
          
        </div>

</div>