<div class="left-sidebar">    
	<div class="row-fluid">
		<div class="span12">
			<div class="widget">
				<div class="widget-header">
					<div class="title">
						Edit Employee
						<span class="mini-title">
							Edit employee
						</span>
					</div>
				</div>
				<div class="widget-body">
					<%= simple_form_for(@employee, :html => {:class => 'form-horizontal' }) do |f| %>
					<%= f.input :full_name, placeholder: 'Enter Full Name' %>
					<%= f.input :gender, collection: Employee::GENDER, prompt: 'Select Gender' %>
					<%= f.association :employee_department, label_method: :department_name,prompt: 'Select Department' %>
					<%= f.association :employee_position, label_method: :position_title,prompt: 'Select Position' %>
					<div class="form-actions no-margin">
						<button type="submit" class="btn btn-info pull-right">
							Update Employee
						</button>
						<div class="clearfix">
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<%= render 'users/right-sidebar'%>