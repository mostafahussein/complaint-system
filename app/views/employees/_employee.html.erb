<div class="widget-body">
	<%= simple_form_for(@employee, :html => {:class => 'form-horizontal' }) do |f| %>
	<%= f.input :full_name, placeholder: 'Enter Full Name' %>
	<%= f.input :gender, collection: Employee::GENDER, prompt: 'Select Gender', required: true %>
	<%= f.association :employee_position, label_method: :position_title,prompt: 'Select Position', required: true %>
	<div class="form-actions no-margin">
		<button type="submit" class="btn btn-info pull-right">
			Create Employee
		</button>
		<div class="clearfix">
		</div>
	</div>
	<% end %>
</div>
<script type="text/javascript">
$('#new_employee').validate();
</script>
<script type="text/javascript">
var full_name = new LiveValidation('employee_full_name');
full_name.add( Validate.Presence );
</script>