<header>
	<a href="#" class="logo">
		<img src="/assets/Logo-2-Recovered.png" alt="logo" />
	</a>
	<% if current_user %>
	<div class="btn-group">
		<button class="btn btn-primary">
			<%= current_user.email %> (<%= current_user.role.titleize %>)
		</button>
		<button data-toggle="dropdown" class="btn btn-primary dropdown-toggle">
			<span class="caret">
			</span>
		</button>
		<ul class="dropdown-menu pull-right">
			<li>
				<a href="<%= edit_user_path(current_user) %>" data-remote="true">
					Edit Account
				</a>
			</li>
			<li>
				<a href="<%= user_path(current_user) %>">
					View Profile
				</a>
			</li>
			<li>
				<a href="<%= destroy_user_session_path %>">
					Logout
				</a>
			</li>
		</ul>
	</div>
		<% if current_user.student? %>
			<ul class="mini-nav" id="notifications">
				<li>
					<a href="<%= notifications_path %>">
						<div class="fs1" aria-hidden="true" data-icon="&#xe04c;"></div>
						<% if current_user.unread_notifications.count > 0 %>
						<span class="info-label badge badge-info">
							<%= current_user.unread_notifications.count %>
						</span>
						<% end %>
					</a>
				</li>
			</ul>
		<% end %>
	<% end %>
</header>