	<label id=''><%= check_box_tag 'student[subject_ids][]', subject.id, @student.subjects.include?(subject) %>
		&nbsp;&nbsp;<%= subject.subject_title %></label>
		<% end %>
		<%= hidden_field_tag 'student[subject_ids][]', '' %>
