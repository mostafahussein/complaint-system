<div class="row-fluid">
	<div class="span12">
		<div class="widget">
			<div class="widget-header">
				<div class="title" id="complaints_per_employee">
					Students Directory
					<span class="mini-title">
					</span>
				</div>
			</div>

			<div class="widget-body">
				<div id="dt_example" class="example_alt_pagination">
					<%= form_tag create_multiple_students_path, method: :post do %>
					<table class="table table-condensed table-striped table-hover table-bordered pull-left" id="students">

						<thead>
							<tr>
								<th>ID</th>
								<th>Full Name</th>
								<th>Batch Name</th>
								<th>Section</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<% @students.each do |student| %>
								<tr>
									<td><%= check_box_tag 'student_ids[]', student.id %> <%= student.id %></td>

									<td><%= student.full_name %></td>

									<td><%= student.batch_name %></td>

									<td><%= student.section_name %></td>

										<td><a href="<%= user_path(student.user_id) if student.user%>" rel="tooltip" title="View Profile">view</a>
											| <a href="<%= edit_student_path(student) %>" rel="tooltip" title="Update Student Details">update</a> | <%= link_to "delete", student, method: :delete, data: { confirm: "#{student.full_name} will be deleted, proceed?" } %> | <a href="<%= student_path(student) %>" rel="tooltip" title="Assigned Subjects">attended Subjects</a></td>
										</tr>
										<% end %>
									</tbody>
								</table>
								<div class="clearfix">
								</div>
								<%= submit_tag 'Create User(s)' %>
								<% end %>
							</div>
						</div>

					</div>
				</div>
			</div>
			<script>
			$('#students').dataTable({
				"sPaginationType": "full_numbers"
			});
			</script>