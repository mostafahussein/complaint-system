<div class="widget-body">
	<%= simple_form_for(@student, :html => {:class => 'form-horizontal' }) do |f| %>
	<%= f.input :full_name, placeholder: 'Enter Full Name' %>
	<%= f.input :gender, collection: Student::GENDER, prompt: 'Select Gender', required: true %>
	<%= f.association :batch, label_method: :batch_name, prompt: 'Select Batch', required: true  %>
	<%= f.association :section, label_method: :section_name , prompt: 'Select Section', required: true %>
	<div class="form-actions no-margin">
		<button type="submit" class="btn btn-info pull-right">
			Update Student
		</button>
		<div class="clearfix">
		</div>
	</div>
	<% end %>
</div>
<script type="text/javascript">
var full_name = new LiveValidation('student_full_name');
full_name.add( Validate.Presence );
</script>
<script type="text/javascript">
$('#edit_student').validate();
</script>
