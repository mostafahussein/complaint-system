

	<div class="row-fluid">
		<div class="span12">
			<div class="widget">
				<div class="widget-header">
					<div class="title">
						Suggestion #<%= @suggestion.id %> - <%= @suggestion.title %>
					</div>
				</div>
				<div class="widget-body">

					<div class="hero-unit">
						<p><%= @suggestion.content %></p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span12">
			<div class="widget">
				<div class="widget-header">
					<div class="title">
						Comments
					</div>
				</div>
				<div id="replies" class="widget-body">
					<% if @suggestion.replies.exists? %>
					<%= render @suggestion.replies.select(&:persisted?) %>
					<% else %>
					<blockquote>
						<p>
							There are no follow ups yet.
						</p>
					</blockquote>
					<% end %>
				</div>
			</div>
		</div>
	</div>


	<div class="row-fluid">
		<div class="span12">
			<div class="widget">
				<div class="widget-header" style="display:none">
				</div>
				<div class="widget-body">
					<ul class="nav nav-tabs no-margin myTabBeauty">
						<li class="active">
							<a data-toggle="tab" href="#post">
								Reply
							</a>
						</li>
					</ul>
					<div class="tab-content" id="myTabContent">
						<div id="post" class="tab-pane fade active in">
							<%= render 'replies/form' %>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>